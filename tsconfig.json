{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "src/support",
    "node_modules"
  ]
}
