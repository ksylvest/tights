{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.*",
    "src/stories",
    "src/support",
    "node_modules"
  ]
}
